<% layout('layouts/boilerplate') %> 

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 text-dark">
            <div class="card shadow mt-5" id="newCampCard">
                <div class="card-body text-dark-50 p-5">
                    <h1 class="card-title text-primary text-center mb-4">New campground</h1>
                    <form action="/campground" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="title">Enter Camp name</label>
                        <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Camp Name" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please enter a Camp Name.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Enter Camp Location</label>
                        <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Camp Location" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please enter Camp Location.</div>    
                    </div>
                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label">Upload Image</label>
                        <input class="form-control" type="file" name="image" id="formFileMultiple" multiple>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Enter Description</label>
                        <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="Enter description" required></textarea>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please enter Camp Description.</div>   
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                            <label class="form-label" for="price">Enter Price</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text">Rs.</span>
                                <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0.00" aria-label="price" required >
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter Price.</div>
                            </div>   
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between m-3">
                        <button class="btn btn-outline-success">Submit</button>
                        <a class="btn btn-outline-secondary " href="/campground">Back</a>  
                    </div>
                    </form>                    
                </div>
            </div>
        </div>
    </div>
</div>



